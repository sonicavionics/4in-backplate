#VRML V2.0 utf8
  Transform {
    children [
      DirectionalLight {
      on TRUE
      intensity 0.63
      ambientIntensity 0.21
      color 1.0 1.0 1.0
      direction 0.1 -0.1 -1
      }
  EOF
  cat "board.wrl" >> "board.front.wrl"
  echo "] }" >> "board.front.wrl"

  # Step 4: Convert to PNG using Rayhunter
  echo "Converting /workspace/images/board.front.wrl to board.png..."
  rayhunter classic 7       4320 4320       "/workspace/images/board.front.wrl"       "/workspace/images/board.png"       --camera-pos 0 0 6       --camera-dir 0 0 -1       --scene-bg-color 1 1 1

  # Step 5: Clean up
  rm /workspace/images/board.front.wrl
  rm /workspace/images/board.wrl

  echo "Script execution completed."
